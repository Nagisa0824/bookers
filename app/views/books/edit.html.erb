<div class="edit">
<h1>Editing Book</h1>
<div class="form">
<% if @book.errors.any? %>
 <%= @book.errors.count %>件のerrorエラーが発生しました
 <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>
    
<%= form_with model:@book, url:"/books/#{@book.id}",local:true do |f| %>
<div class="field">
<label>Title</label>
<%= f.text_field :title %>
</div>
<div calss="field">
<label>Body</label>
<%= f.text_area :body %>
</div>
<div class="action">
<%= f.submit "Update Book"%>
</div>
<%= link_to "Show", "/books/#{@book.id}" %>
<%= link_to "Back", "/books" %>
<% end %>
</div>
</div>


